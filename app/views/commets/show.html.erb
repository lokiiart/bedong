<%- model_class = Commet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @commet.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_avatar) %>:</strong></dt>
  <dd><%= @commet.customer_avatar %></dd>
  <dt><strong><%= model_class.human_attribute_name(:star_name) %>:</strong></dt>
  <dd><%= @commet.star_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:virtual_time) %>:</strong></dt>
  <dd><%= @commet.virtual_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @commet.content %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              commets_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_commet_path(@commet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              commet_path(@commet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
