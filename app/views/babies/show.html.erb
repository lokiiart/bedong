<%- model_class = Baby -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @baby.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar) %>:</strong></dt>
  <dd><%= @baby.avatar %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @baby.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:star_id) %>:</strong></dt>
  <dd><%= @baby.star_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:banner) %>:</strong></dt>
  <dd><%= @baby.banner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:intro) %>:</strong></dt>
  <dd><%= @baby.intro %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              babies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_baby_path(@baby), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              baby_path(@baby),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
