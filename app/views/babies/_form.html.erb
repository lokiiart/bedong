<%= form_for @baby, :html => { :class => "form-horizontal baby" } do |f| %>

  <% if @baby.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@baby.errors.count, "error") %> prohibited this baby from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @baby.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :avatar, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :avatar, :class => 'form-control' %>
    </div>
    <%=f.error_span(:avatar) %>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:price) %>
  </div>
  <div class="form-group">
    <%= f.label :star_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :star_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:star_id) %>
  </div>
  <div class="form-group">
    <%= f.label :banner, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :banner, :class => 'form-control' %>
    </div>
    <%=f.error_span(:banner) %>
  </div>
  <div class="form-group">
    <%= f.label :intro, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :intro, :class => 'form-control' %>
    </div>
    <%=f.error_span(:intro) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                babies_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
